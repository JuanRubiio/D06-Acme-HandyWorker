<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
	
		<bean class="converters.CurriculumToStringConverter"/>
		<bean class="converters.StringToCurriculumConverter"/>
		
		<bean class="converters.EducationalRecordToStringConverter"/>
		<bean class="converters.StringToEducationalRecordConverter"/>
		
		<bean class="converters.EndorserRecordToStringConverter"/>
		<bean class="converters.StringToEndorserRecordConverter"/>
		
		<bean class="converters.PersonalRecordToStringConverter"/>
		<bean class="converters.StringToPersonalRecordConverter"/>
		
		<bean class="converters.ProfessionalRecordToStringConverter"/>
		<bean class="converters.StringToProfessionalRecordConverter"/>
		
		<bean class="converters.MiscellaneousRecordToStringConverter"/>
		<bean class="converters.StringToMiscellaneousRecordConverter"/> 
					
	</util:list>
	
</beans>